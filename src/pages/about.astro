---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
  <Fragment slot="title">
    Empowering Your Financial Journey with <br />
    <span class="text-accent dark:text-white highlight">Aurora Accounting London</span>
  </Fragment>
  
  <Fragment slot="subtitle">
    At Aurora Accounting London, we blend expertise with innovation to offer exceptional accounting services tailored to your unique business needs. Experience unparalleled dedication and strategic financial solutions with us.
  </Fragment>
  </Hero>
  
  <!-- Stats Widget ****************** -->
  
  <Stats
    title="Aurora Accounting By The Numbers"
    stats={[
      { title: 'Qualified Accountants', amount: '12' },
      { title: 'Satisfied Clients', amount: '300+' },
      { title: 'Years of Experience', amount: '15' },
      { title: 'Financial Solutions Offered', amount: '20+' },
    ]}
  />
  
  <!-- Features3 Widget ************** -->
  
  <Features3
    title="Our Services"
    subtitle="Discover a range of tailored accounting services designed to illuminate your business's potential."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Tax Efficiency',
        description:
          'Maximize your savings with our expert tax planning and compliance services, ensuring you pay only what you owe.',
        icon: 'tabler:template',
      },
      {
        title: 'Financial Planning',
        description:
          'Strategic financial planning to grow your wealth and secure your business’s future.',
        icon: 'tabler:template',
      },
      {
        title: 'Cloud Accounting',
        description:
          'Experience the convenience of real-time financial data with our cutting-edge cloud accounting solutions.',
        icon: 'tabler:template',
      },
    ]}
  />
  
  <!-- Features3 Widget ************** -->
  
  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Compliance and Advisory',
        description:
          'Navigate the complexities of financial compliance with ease, while benefiting from our expert advisory services.',
        icon: 'tabler:template',
      },
      {
        title: 'Auditing',
        description:
          'Comprehensive auditing services to ensure accuracy and transparency in your financial reporting.',
        icon: 'tabler:template',
      },
      {
        title: 'Startup Support',
        description:
          'Tailored support for startups, helping you lay a strong financial foundation from day one.',
        icon: 'tabler:template',
      },
    ]}
  />
  
  <!-- Steps2 Widget ****************** -->
  
  <Steps2
    title="Our Commitment"
    subtitle="At Aurora Accounting London, we’re dedicated to providing top-notch services with a personal touch."
    items={[
      {
        title: 'Client-Focused Approach',
        description:
          'Your success is our priority. We take the time to understand your business, ensuring tailored solutions that fit your unique needs.',
      },
      {
        title: 'Innovative Solutions',
        description:
          'Stay ahead of the curve with our innovative accounting techniques and technologies.',
      },
      {
        title: 'Integrity and Transparency',
        description:
          'We believe in honest, transparent communication, ensuring you’re always in the loop about your financial standing.',
      },
    ]}
  />
  
  <!-- Steps2 Widget ****************** -->
  
  <Steps2
    title="Why Aurora?"
    subtitle="Discover the Aurora difference and how we can illuminate the path to your business’s financial success."
    isReversed={true}
    callToAction={{
      text: 'Learn More',
      href: '/',
    }}
    items={[
      {
        title: 'Experienced Team',
        description: 'Our team of qualified accountants brings decades of collective experience to your financial challenges.',
      },
      {
        title: 'Comprehensive Services',
        description:
          'From basic bookkeeping to complex financial planning, we’ve got all your accounting needs covered.',
      },
      {
        title: 'Customized Strategies',
        description:
          'We don’t just offer services; we deliver customized strategies designed to elevate your business.',
      },
    ]}
  />
  
  <!-- Features2 Widget ************** -->
  
  <Features2
    title="Our Office"
    tagline="Visit Us"
    columns={4}
    items={[
      {
        title: 'London Headquarters',
        description: '123 Finance Street, London, UK',
      },
    ]}
  />
  
  <!-- Features2 Widget ************** -->

<Features2
title="Get in Touch"
tagline="We're here to help"
columns={2}
items={[
  {
    title: 'Consult with Us',
    description:
      'Start your journey towards financial clarity and success. Schedule a consultation today.',
    icon: 'tabler:calendar',
  },
  {
    title: 'Join our Community',
    description:
      'Connect with other business professionals and gain insights into the latest in finance and accounting.',
    icon: 'tabler:users',
  },
]}
/>

<!-- Features2 Widget ************** -->

<Features2
  title="Technical Support"
  tagline="We're Here for You"
  columns={2}
  items={[
    {
      title: 'Chat with Our Team',
      description:
        'Our dedicated team is ready to assist you with any queries or support you need. Reach out to us anytime via our online chat.',
      icon: 'tabler:messages',
    },
    {
      title: 'Direct Support Line',
      description:
        'Prefer a more personal touch? Call our support line for immediate assistance from our expert accounting team.',
      icon: 'tabler:phone-call',
    },
  ]}
/>
</Layout>