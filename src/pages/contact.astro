---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
const metadata = {
  title: 'Contact',
};
---
<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />
  <ContactUs
    title="Reach Out to Aurora Accounting London"
    subtitle="Have a question or need expert advice? Explore our FAQs or get in touch with our team. We're committed to providing you with the support you need."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this form, you consent to Aurora Accounting London processing your personal information for the purposes of addressing your inquiry.',
    }}
    description="Our team aims to respond within one business day."
  />
  <Hero actions={[ { text: 'Call Now', href: "tel:+447762922925"   } ]}    /> 

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Dedicated Support"
    items={[
      {
        title: 'General Inquiries',
        description: `Reach out to us for any questions about our services, appointment scheduling, or general information about Aurora Accounting London.`,
        icon: 'tabler:info-circle',
      },
      {
        title: 'Consultation Requests',
        description:
          'Interested in our accounting services? Contact us to discuss your needs and how we can assist you.',
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Technical Assistance',
        description:
          'Need help with our online tools or have a specific technical query? Our team is here to assist you.',
        icon: 'tabler:tools',
      },
      {
        title: 'Phone',
        description: '+44 (0)20 1234 5678',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'info@auroraaccountinglondon.com',
        icon: 'tabler:mail-forward',
      },
      {
        title: 'Office Location',
        description: '123 Baker Street, London, UK',
        icon: 'tabler:map-2',
      },
    ]}
  />
</Layout>
